<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="MyPopupMenu.Light" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyPopupMenu.Dark" parent="ThemeOverlay.AppCompat.Dark" />
    <style name="Theme.WallNotes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Base application theme. -->
    <style name="Theme.WallNotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="appDatePickerDialogTheme">@style/MyAlertDialogTheme.Light</item>

        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOutline">@color/dark_custom_outline</item>
        <item name="cardItemBackgroundSelected">#60000000</item>
        <item name="cardItemBackgroundDefault">@android:color/transparent</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="popupTheme">@style/MyPopupMenu.Light</item>
    </style>
    <style name="morado" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/purple_500</item>
        <item name="actionModeBackground">@color/purple_500</item>
        <item name="colorOutline">@color/dark_custom_outline</item>
        <item name="navItemIconTint">@color/navigation_item_text_tint_light</item>
        <item name="navItemTextColor">@color/navigation_item_text_tint_light</item>
        <item name="cardItemBackgroundSelected">#60000000</item>
        <item name="cardItemBackgroundDefault">@android:color/transparent</item>
        <item name="appDatePickerDialogTheme">@style/MyAlertDialogTheme.Light</item>

        <item name="popupTheme">@style/MyPopupMenu.Light</item>

    </style>

    <!-- NUEVO TEMA: Azulado -->
    <style name="azul" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="cardItemBackgroundSelected">#60000000</item>
        <item name="cardItemBackgroundDefault">@android:color/transparent</item>
        <item name="appDatePickerDialogTheme">@style/MyAlertDialogTheme.Light</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/blue_primary</item> <!-- e.g., @color/md_blue_500 -->
        <item name="android:actionModeBackground">@color/blue_primary</item>
        <item name="actionModeBackground">@color/blue_primary</item>
        <item name="colorPrimaryVariant">@color/blue_primary_dark</item> <!-- e.g., @color/md_blue_700 -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOutline">@color/dark_custom_outline</item>
        <item name="navItemIconTint">@color/navigation_item_text_tint_light</item>
        <item name="navItemTextColor">@color/navigation_item_text_tint_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cyan_accent</item> <!-- e.g., @color/md_cyan_A200 -->
        <item name="colorSecondaryVariant">@color/cyan_accent_dark</item> <!-- e.g., @color/md_cyan_A400 -->
        <item name="colorOnSecondary">@color/black</item>
        <item name="popupTheme">@style/MyPopupMenu.Light</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="verde" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="colorPrimary">@color/green</item>
        <item name="android:actionModeBackground">@color/green</item>
        <item name="actionModeBackground">@color/green</item>
        <item name="colorPrimaryVariant">@color/green_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOutline">@color/dark_custom_outline</item>
        <item name="navItemIconTint">@color/navigation_item_text_tint_light</item>
        <item name="navItemTextColor">@color/navigation_item_text_tint_light</item>
        <item name="appDatePickerDialogTheme">@style/MyAlertDialogTheme.Light</item>

        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="cardItemBackgroundSelected">#60000000</item>
        <item name="cardItemBackgroundDefault">@android:color/transparent</item>
        <item name="popupTheme">@style/MyPopupMenu.Light</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.WallNotes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>





    <style name="Theme.AppCompat.Light.NoActionBar.Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">
            @style/Widget.Theme.AppCompat.Light.NoActionBar.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.WallNotes.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

</resources>